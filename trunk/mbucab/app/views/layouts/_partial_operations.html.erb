<div id="header">
  <h1>mail boxes ucab</h1>
  <h2>Trust and speed in your shipments</h2>

  <% if session[:employee] != nil %>
    <ul>
      <% if session[:role] == 1 %>
        <li><%= link_to "Employee Management", :controller => :employees, :action => :index %></li>
      <%end%>
      <% if session[:role] == 1 %>
        <li><%= link_to "Delivery Simulation", :controller => :orders, :action => :simulation %></li>
      <%end%>
      <% if session[:role] == 1 || session[:role] == 2 %>
        <li><%= link_to "My Assigned Route", :controller => :routes, :action => :my_route%></li>
      <%end%>
      <% if session[:role] == 1 || session[:role] == 3%>
        <li><%= link_to "Route Management", :controller => :routes, :action => :index%></li>
      <%end%>
      <li><a href="/employees/<%= session[:employeeid] %>">Account</a></li>
    </ul>
  <%end%>


</div>
<div id="content">
  <div id="colOne">
    <h3>Employees</h3>
    <div class="bg1">

      <% if session[:employee] == nil %>
        <ul>
          <% form_tag :controller => "session", :action => "employee_login",:html => {:id => 'main_input' }, :method => "get" do -%>
            <p><%= label_tag "account",nil, :class=> "label-login" %>
              <%= text_field_tag "account", @account,:class=>"field text" %></p>

            <p><%= label_tag "password" %>
              <%= password_field_tag "password", nil,:class=>"field text" %></p>


            <p style="padding-left: 30px;"><%= image_submit_tag("/images/login.png", :title => "Login", :border=>0) %></p>

          <% end -%>

        </ul>
      <% else %>
        <ul>
          <li><%= session[:employee] %></li>
          <li align="center"><%= link_to image_tag("/images/logout.png",:size => "40x40", :title => "Logout", :border=>0),:controller => :session, :action => :employee_logout%></li>
        </ul>
      <%  end %>
    </div>
    <% if session[:role] == 1 || session[:role]==2 %>
      <h3>Notify Order Pickup</h3>
      <div class="bg1">
        <ul>
          <% form_tag :controller => "orders", :action => "notify",:html => {:id => 'main_input' }, :method => "get" do -%>
            <p><%= label_tag "Order #:",nil %>
              <%= text_field_tag "id", @id,:class=>"field text",:maxlength =>5, :size =>3%>

              <%= image_submit_tag("/images/good.png", :title => "Notify", :border=>0) %></p>

          <% end -%>

        </ul>
      </div>
    <%end%>
  </div>
  <div id="colThree">
    <img src="/images/ucab.jpg" width="152px" height="164px" alt="boxes" align="right"></img>
    <img src="/images/boxes.jpg" width="152px" height="202px" alt="boxes"></img>
  </div>
  <div id="colTwo">
    <div class="bg2">
      <p style="color: green"><%= flash[:notice] %></p>
      <p style="color: red"><%= flash[:error] %></p>
      <%= yield -%>
    </div>
  </div>

</div>
<div id="footer">
  <div class="bg2"><p>Copyright Â© 2011. www.mailboxesucab.com. All Rights Reserved. Designed by ILC. </p></div>
</div>
