<h1>Listing orders</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Recipient</th>
    <th>Fulladdress</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th>Status</th>
    <th>Collectiondate</th>
    <th>Deliverydate</th>
    <th>Address</th>
    <th>Client</th>
    <th>Creditcard</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%=h order.date %></td>
    <td><%=h order.recipient %></td>
    <td><%=h order.fulladdress %></td>
    <td><%=h order.longitude %></td>
    <td><%=h order.latitude %></td>
    <td><%=h order.status %></td>
    <td><%=h order.collectiondate %></td>
    <td><%=h order.deliverydate %></td>
    <td><%=h order.address_id %></td>
    <td><%=h order.client_id %></td>
    <td><%=h order.creditcard_id %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

