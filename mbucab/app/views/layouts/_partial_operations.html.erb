<div id="header">
  <h1>mail boxes ucab</h1>
  <h2>Trust and speed in your shipments</h2>


  <ul>
<li><a href="#" accesskey="1" title="">Menu admin1</a></li>
<li><a href="#" accesskey="2" title="">Menu admin2</a></li>
<li><a href="#" accesskey="4" title="">Menu admin3</a></li>
  </ul>


</div>
<div id="content">
  <div id="colOne">
    <h3>Employees</h3>
    <div class="bg1">

      <% if session[:employee] == nil %>
        <ul>
          <% form_tag(:controller => "session", :action => "employee_login", :method => "get") do -%>
            <p><%= label_tag "account",nil, :class=> "label-login" %>
              <%= text_field_tag "account", @account,:class=>"field text" %></p>

            <p><%= label_tag "password" %>
              <%= password_field_tag "password", nil,:class=>"field text" %></p>


            <p style="margin-top: 22px; padding-left: 30px;"><%= submit_tag "Log in" %></p>

          <% end -%>

        </ul>
      <% else %>
        <ul>
          <li><%= session[:employee] %></li>
          <li><%= link_to "Logout", :controller => :session, :action => :employee_logout %></li>
        </ul>
      <%  end %>
    </div>
  </div>
  <div id="colThree">
    <img src="/images/ucab.jpg" width="152px" height="164px" alt="boxes" align="right"></img>
    <img src="/images/boxes.jpg" width="152px" height="202px" alt="boxes"></img>
  </div>
  <div id="colTwo">
    <div class="bg2">
      <p style="color: green"><%= flash[:notice] %></p>
      <p style="color: red"><%= flash[:error] %></p>
      <%= yield -%>
    </div>
  </div>

</div>
