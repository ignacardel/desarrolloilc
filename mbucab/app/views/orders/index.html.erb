<h1>Listing orders</h1>

<table>
  <tr>
    <th>Order #</th>
    <th>    </th>
    <th>Order Placed   </th>
    <th>    </th>
    <th>Recipient</th>
    <th>    </th>
    <th>Status</th>
    <th>    </th>
    <th>Total</th>
    <th>    </th>

  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%=h order.id %></td>
    <td>    </td>
    <td><%=h order.created_at.year %>-<%=h order.created_at.month %>-<%=h order.created_at.day %></td>
    <td>    </td>
    <td><%=h order.recipient %></td>
    <td>    </td>
    <td><%=h order.actual_status %></td>
    <td>    </td>
        <%  total = 0 %>
        <%for package in order.packages %>
         <% total = package.price + total %>
        <% end %>
    <td>$ <%=h total + (total * 0.1 )%></td>
    <td>    </td>
    <td><%= link_to 'Show', order %></td>
  </tr>
<% end %>
</table>

